#include <iostream>

void ggtVersion_01(int _X, int _Y)
{
	int rest = -1;
	int X = _X;
	int Y = _Y;

	while (rest)
	{

		rest = (_X % _Y);

		_X = _Y;
		_Y = rest;

		std::cout << rest << std::endl;

		if (rest == 0)
		{
			std::cout << std::endl;
			std::cout << "ggT(" << X << "," << Y << ") = " << _X;
		}
	}
}

int ggtVersion_02(int _X, int _Y)
{
	int round = 0;

	int old_a = _X;
	int a = 42;
	int new_a = 1000;

	int q;

	int old_x = 1;
	int x = 0;
	int new_x = 0;

	int old_y = 0; 
	int y = 1;
	int new_y = 0;

	while (new_a != 0)
	{
		q = abs(old_a / a);
		new_a = old_a - q * a;
		new_x = old_x - q * x;
		new_y = old_y - q * y;

		old_a = a;
		old_x = x;
		old_y = y;

		a = new_a;
		x = new_x;
		y = new_y;

		round++;

		std::cout << "round = " << round << std::endl;
		std::cout << "ai = " << old_a << std::endl;
		std::cout << "qi = " << q << std::endl;
		std::cout << "xi = " << old_x << std::endl;
		std::cout << "yi = " << old_y << std::endl;
	}

	return old_a;
}



int main()
{
	//ggtVersion_01(93, 42);
	ggtVersion_02(93,42);

	return 0;
}
